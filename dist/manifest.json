{
  "manifest_version": 2,
  "name": "Copitta",
  "description": "Copy to clipboard in markdown format.",
  "version": "0.0.1",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "48": "images/icon48.png"
    },
    "default_title": "Copitta"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs", "contextMenus"]
}
